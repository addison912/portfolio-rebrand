{
  "name": "portfolio-site",
  "version": "1.1.0",
  "description": "Portfolio site",
  "author": "Addison Moore <addisondrewmoore@gmail.com>",
  "license": "ISC",
  "staticFiles": {
    "staticPath": [
      "robots.txt"
    ]
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production nodemon app.js",
    "start:docker": "docker run --name portfolio -p 3232:80 --env-file ./.env.production.local -d portfolio",
    "dev": "cross-env NODE_ENV=development nodemon app.js",
    "build": "npm run build:prod && docker build -t portfolio .",
    "build:dev": "parcel src/*.html",
    "build:prod": "parcel build --no-cache src/*.html --dist-dir ./build/",
    "clear": "rm -rf .cache/ dist/ .parcel-cache/ ./build"
  },
  "dependencies": {
    "@glidejs/glide": "^3.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "cssnano": "^6.0.2",
    "parcel": "^2.10.3"
  }
}
